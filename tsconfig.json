{
    "compilerOptions": {
      "target": "es6",
      "lib": [
        "es2016",
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "react",
      "outDir": "."
    },
    "include": [
      "./src"
    ],
    "exclude": [
      "./node_modules",
      "./src/types"
    ],
}